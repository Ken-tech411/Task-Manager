<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <!-- Main Layout Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Scrollable Content -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- User Profile Section -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/userProfileSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="40dp"
                    style="@style/AppCard"
                    app:cardCornerRadius="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        >

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/userProfileImage"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_user_profile"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            android:scaleType="centerCrop"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/divider"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:contentDescription="@string/user_profile" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@id/userProfileImage"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <TextView
                                android:id="@+id/userNameTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                style="@style/TextSubtitle"
                                android:textStyle="bold"
                                android:textColor="@color/textPrimary" />

                            <TextView
                                android:id="@+id/userEmailTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                style="@style/TextCaption"
                                android:textColor="@color/textSecondary"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/notificationIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:icon="@drawable/ic_notification"
                            app:iconTint="@color/colorPrimary"
                            app:iconSize="24dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            android:padding="12dp"
                            app:cornerRadius="24dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeWidth="0dp"
                            app:rippleColor="#20000000"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:contentDescription="@string/notification" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- My Tasks Section -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/myTasksSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    style="@style/AppCard"
                    app:cardCornerRadius="16dp"
                    app:layout_constraintTop_toBottomOf="@id/userProfileSection"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="16dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <!-- My Tasks Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@color/blueLight"
                            android:padding="12dp"
                            android:layout_marginBottom="16dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/task_list"
                                    style="@style/TextHeadline"
                                    android:textColor="@color/blue" />

                                <TextView
                                    android:id="@+id/tasksProgressText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/no_tasks_yet"
                                    android:textSize="14sp"
                                    android:textColor="@color/textSecondary"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/newTaskButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/add_task"
                                android:textSize="14sp"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                app:icon="@android:drawable/ic_input_add"
                                app:iconTint="@color/colorPrimary"
                                app:iconGravity="start"
                                app:backgroundTint="@color/white"
                                app:strokeColor="@color/colorPrimary"
                                app:strokeWidth="1dp"
                                app:cornerRadius="20dp"
                                android:textColor="@color/colorPrimary" />
                        </LinearLayout>

                        <!-- Progress Bar -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/tasksProgressBar"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:indicatorColor="@color/colorPrimary"
                                app:trackColor="@color/divider"
                                android:progress="0" />

                            <TextView
                                android:id="@+id/progressPercentageText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/progress_complete_format"
                                style="@style/TextCaption"
                                android:textColor="@color/textSecondary"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>

                        <!-- Toggle Buttons for Stats and Filters -->
                        <LinearLayout
                            android:id="@+id/toggleLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp"
                            android:layout_marginBottom="16dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/toggleStatsButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/show_stats"
                                android:paddingVertical="8dp"
                                app:icon="@android:drawable/ic_menu_info_details"
                                app:iconTint="@color/colorPrimary"
                                app:iconGravity="start"
                                app:backgroundTint="@android:color/transparent"
                                android:textColor="@color/textPrimary"
                                android:textSize="14sp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/toggleFiltersButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/show_filters"
                                android:paddingVertical="8dp"
                                app:icon="@android:drawable/ic_menu_sort_by_size"
                                app:iconTint="@color/colorPrimary"
                                app:iconGravity="start"
                                app:backgroundTint="@android:color/transparent"
                                android:textColor="@color/textPrimary"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Task Statistics -->
                        <LinearLayout
                            android:id="@+id/statsSection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                style="@style/TextSubtitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="@string/task_statistics"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:orientation="horizontal">

                                <com.google.android.material.card.MaterialCardView
                                    style="@style/AppCard"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="8dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="12dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="12dp">

                                        <TextView
                                            style="@style/TextBody"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/priority_high"
                                            android:textColor="@color/textSecondary" />

                                        <TextView
                                            android:id="@+id/highPriorityCount"
                                            style="@style/TextTitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="0"
                                            android:textColor="@color/red" />
                                    </LinearLayout>
                                </com.google.android.material.card.MaterialCardView>

                                <com.google.android.material.card.MaterialCardView
                                    style="@style/AppCard"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="12dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="12dp">

                                        <TextView
                                            style="@style/TextBody"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/tasks_overdue"
                                            android:textColor="@color/textSecondary" />

                                        <TextView
                                            android:id="@+id/overdueCount"
                                            style="@style/TextTitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="0"
                                            android:textColor="@color/red" />
                                    </LinearLayout>
                                </com.google.android.material.card.MaterialCardView>
                            </LinearLayout>

                            <!-- Circular Progress Indicator -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.google.android.material.progressindicator.CircularProgressIndicator
                                    android:id="@+id/completionProgress"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:progress="0"
                                    app:indicatorColor="@color/colorSuccess"
                                    app:trackColor="@color/blueLight" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/completionText"
                                        style="@style/TextBody"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/completed_progress_format"
                                        android:textColor="@color/colorSuccess" />

                                    <TextView
                                        android:id="@+id/inProgressText"
                                        style="@style/TextBody"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/in_progress_progress_format"
                                        android:textColor="@color/blue" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Filter & Sort Section -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/filterSortSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    style="@style/AppCard"
                    app:cardCornerRadius="16dp"
                    app:layout_constraintTop_toBottomOf="@id/myTasksSection"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/filter_and_sort"
                            style="@style/TextSubtitle"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="@string/priority"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                app:boxStrokeColor="@color/colorPrimary"
                                app:hintTextColor="@color/colorPrimary">

                                <Spinner
                                    android:id="@+id/prioritySpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="8dp"
                                    android:background="@android:color/transparent"
                                    android:entries="@array/priority_options" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:hint="@string/category"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                app:boxStrokeColor="@color/colorPrimary"
                                app:hintTextColor="@color/colorPrimary">

                                <Spinner
                                    android:id="@+id/categorySpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="8dp"
                                    android:background="@android:color/transparent"
                                    android:entries="@array/category_options" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/sort_by"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxStrokeColor="@color/colorPrimary"
                            app:hintTextColor="@color/colorPrimary">

                            <Spinner
                                android:id="@+id/sortBySpinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:background="@android:color/transparent"
                                android:entries="@array/sort_by_options" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Tab Layout for Task Status -->
                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/taskStatusTabs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:tabMode="scrollable"
                            app:tabIndicatorColor="@color/colorPrimary"
                            app:tabTextColor="@color/textSecondary"
                            app:tabSelectedTextColor="@color/colorPrimary">

                            <com.google.android.material.tabs.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tab_all" />

                            <com.google.android.material.tabs.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tab_to_do" />

                            <com.google.android.material.tabs.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tab_in_progress" />

                            <com.google.android.material.tabs.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tab_completed" />
                        </com.google.android.material.tabs.TabLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Task List Container -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/taskListContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:layout_constraintTop_toBottomOf="@id/filterSortSection"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white">

                        <!-- Categorized Task List -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="12dp"
                            android:clipToPadding="false"
                            tools:listitem="@layout/item_task"/>

                        <!-- Empty state view -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/emptyView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="24dp"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/emptyStateIcon"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@android:drawable/ic_menu_add"
                                android:alpha="0.2"
                                app:layout_constraintVertical_chainStyle="packed"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@+id/emptyStateText"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:contentDescription="No tasks found" />

                            <TextView
                                android:id="@+id/emptyStateText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/empty_task_list"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_marginTop="16dp"
                                android:textColor="@color/textSecondary"
                                app:layout_constraintTop_toBottomOf="@+id/emptyStateIcon"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Bottom Navigation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:itemIconTint="@color/colorPrimary"
            app:itemTextColor="@color/colorPrimary"
            app:itemRippleColor="#20000000"
            app:elevation="8dp"
            app:menu="@menu/bottom_navigation_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>